{
  "name": "@gala-chain/test",
  "version": "1.10.5",
  "description": "Unit testing and integration testing for GalaChain",
  "license": "Apache-2.0",
  "dependencies": {
    "@gala-chain/client": "1.10.5",
    "nanoid": "^3.3.6",
    "tslib": "^2.6.2",
    "@jest/globals": "29.7.0"
  },
  "peerDependencies": {
    "@gala-chain/api": "1.10.5",
    "bignumber.js": "*",
    "class-transformer": "0.5.1",
    "elliptic": "*",
    "fabric-contract-api": "*",
    "fabric-shim": "*",
    "long": "*"
  },
  "type": "commonjs",
  "main": "./lib/src/index.js",
  "typings": "./lib/src/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "tsc -b --clean",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "madge": "madge --circular --warning lib",
    "lint": "nx run lint",
    "fix": "nx run lint --fix",
    "prepublishOnly": "npm i && npm run clean && npm run build && npm run lint && npm run madge",
    "format": "prettier --config ../.prettierrc 'src/**/*.ts' --write"
  }
}
